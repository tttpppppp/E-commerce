@model List<WebSale.Models.Brand>
@{
    ViewBag.Title = "Danh sách nhãn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="p-2">
    <a href="/Admin/Brand/addBrand" class="btn btn-success mb-3">Thêm nhãn hàng</a>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách nhãn hàng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên nhãn hàng</th>
                            <th>Hình ảnh</th>
                            <th>Trạng thái</th>
                            <th>Quản lý</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.nameBrand</td>
                                <td><img src="@item.imageBrand" width="100px" /></td>
                                <td><span style="font-size: 14px" class="text-white p-1 rounded @(item.status == 1 ? "bg-success" : "bg-danger")">@(item.status == 1 ? "Active" : "UnActive")</span></td>
                                <td>
                                    <a href="/Admin/Brand/deleteBrand?id=@item.brandId" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');" class="btn btn-danger btn-sm">Xóa</a>
                                    <a href="/Admin/Brand/updateBrand?id=@item.brandId" class="btn btn-warning btn-sm">Sửa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 </div>