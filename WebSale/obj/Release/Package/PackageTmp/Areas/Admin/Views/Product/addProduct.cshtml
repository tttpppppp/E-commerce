@model WebSale.Models.Product

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@using (Html.BeginForm("addProduct" , "Product" , FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal p-2">
    <h4>Thêm sản phẩm</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2">Tên sản phẩm</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nameProduct, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nameProduct, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Hình ảnh</label>
        <div class="col-md-10">
            <input type="file" name="file" />
            @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Slug</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.slug, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.slug, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Mô tả</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Giá</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Giá giảm</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.sale_price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sale_price, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Phần trăm giảm</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.percen_sale, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.percen_sale, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Mã SKU</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.sku, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sku, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2">Số lượng</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Thương hiệu</label>
            <select name="brandId" class="form-control">
                @if (ViewBag.listBrand != null)
                {
                    foreach (var item in ViewBag.listBrand)
                    {
                        <option value="@item.brandId">@item.nameBrand</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Danh mục</label>
            <select name="categoryId" class="form-control">
                @foreach (var item in ViewBag.listCategory)
                {
                    <option value="@item.categoryId">@item.nameCategory</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Loại</label>
            <select name="typeId" class="form-control">
                @foreach (var item in ViewBag.listType)
                {
                    <option value="@item.typeId">@item.typeName</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Thông số</label>
            <select name="specificationId" class="form-control">
                @foreach (var item in ViewBag.listThongSo)
                {
                    <option value="@item.specificationId">@item.specificationId</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Trạng thái</label>
            <select id="status" name="status" class="form-control">
                <option value="1">Active</option>
                <option value="0">None-Active</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm sản phẩm" class="btn btn-primary" />
            <a href="/Admin/Product/Index" class="btn btn-success">Danh sách sản phẩm</a>
        </div>
    </div>
</div>
}