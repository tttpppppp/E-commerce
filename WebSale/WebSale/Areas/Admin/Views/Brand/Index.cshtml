@model List<WebSale.Models.Brand>
@{
    ViewBag.Title = "Danh sách nhãn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="p-4">
    <a href="/Admin/Brand/addBrand" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Thêm nhãn hàng
    </a>
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Danh sách nhãn hàng</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">Tên nhãn hàng</th>
                            <th class="text-center">Hình ảnh</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Quản lý</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.nameBrand</td>
                                <td class="text-center">
                                    <img src="@item.imageBrand" width="100px" class="img-fluid" alt="@item.nameBrand" />
                                </td>
                                <td class="text-center">
                                    <span style="font-size: 14px" class="text-white p-1 rounded @(item.status == 1 ? "bg-success" : "bg-danger")">
                                        @(item.status == 1 ? "Active" : "UnActive")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-danger btn-sm btn-delete-brand" data-productid="@item.brandId">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                    <a href="/Admin/Brand/updateBrand?id=@item.brandId" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

