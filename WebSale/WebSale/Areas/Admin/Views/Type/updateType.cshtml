@model WebSale.Models.Type

@{
    ViewBag.Title = "Cập nhật loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@using (Html.BeginForm("updateType" , "Type" , FormMethod.Post , new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal p-2">
    <h4>Cập nhật loại</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.typeId)

    <div class="form-group">
        <label class="col-md-2">Tên loại</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.typeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.typeName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Trạng thái</label>
            <select id="status" name="status" class="form-control">
                <option value="1" @(Model.status == 1 ? "selected" : "")>Active</option>
                <option value="0" @(Model.status == 0 ? "selected" : "")>None-Active</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cập nhật" class="btn btn-warning" />
        </div>
    </div>
</div>
}