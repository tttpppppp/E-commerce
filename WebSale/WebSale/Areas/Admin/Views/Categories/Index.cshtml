@model List<WebSale.Models.Category>
@{
    ViewBag.Title = "Danh sách danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="p-4">
    <a href="/Admin/Categories/addCategories" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Thêm danh mục
    </a>
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Danh sách danh mục</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">Tên danh mục</th>
                            <th class="text-center">Slug</th>
                            <th class="text-center">Hình ảnh</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Quản lý</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.nameCategory</td>
                                    <td class="text-center">@item.slug</td>
                                    <td class="text-center">
                                        <img src="@item.imageCategory" width="100px" class="img-fluid" alt="@item.nameCategory" />
                                    </td>
                                    <td class="text-center">
                                        <span style="font-size: 14px" class="text-white p-1 rounded @(item.status == 1 ? "bg-success" : "bg-danger")">
                                            @(item.status == 1 ? "Active" : "UnActive")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Admin/Categories/deleteCategory?id=@item.categoryId" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                        <a href="/Admin/Categories/updateCategory?id=@item.categoryId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="alert alert-warning">Dữ liệu đang cập nhật!</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

