@model List<WebSale.Models.OrderDetailViewModel>
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="p-4">
    <a href="/Admin/Order/" class="btn btn-success mb-3">Quay về trang danh sách</a>
    <div class="card shadow">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Chi tiết đơn hàng</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderId</td>
                                <td>@item.NameProduct</td>
                                <td><img src="@item.Image" width="150px" /></td>
                                <td>@item.Quantity</td>
                                <td><span class="text-danger font-weight-bold">@((item.PriceAtOrder * item.Quantity).ToString("#,0"))đ</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

