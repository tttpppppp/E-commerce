@model List<WebSale.Models.Transport>
@{
    ViewBag.Title = "Danh sách phí vận chuyển";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="p-4">
    <a href="/Admin/PhiVanChuyen/themVanChuyen" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Thêm phí vẫn chuyển
    </a>
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Danh sách nhãn hàng</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">Tên thành phố</th>
                            <th class="text-center">Tên quận</th>
                            <th class="text-center">Tên phường , xã</th>
                            <th class="text-center">Giá</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.City</td>
                                <td class="text-center">@item.District</td>
                                <td class="text-center">@item.Ward</td>
                                <td class="text-center">@item.Price.ToString("#,0đ")</td>
                                <td class="text-center">
                                    <a href="/Admin/PhiVanChuyen/deleteVanChuyen?id=@item.Id"class="btn btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

