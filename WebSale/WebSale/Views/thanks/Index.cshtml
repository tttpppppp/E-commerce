@{
    ViewBag.Title = "Hoàn tất đơn hàng";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="login-nav-top mt-5 mt-lg-0">
    <div class="container">
        <ul class="mt-3 mt-lg-0">
            <li>
                <a href="/">Trang chủ</a>
            </li>
            <li>
                <i class="fa-solid fa-chevron-right"></i>
                <a href="/thanks">Thanks</a>
            </li>
        </ul>
    </div>
</div>
<div class="container my-3 text-center d-flex align-items-center justify-content-center flex-column">
    <h5 class="text-color fw-bold mb-3">Hoàn tất đơn hàng</h5>
    <div class="order-status-thanks col-lg-6 d-flex">
        <img alt="Cartoon character riding a red scooter with a delivery box" height="100" src="https://static-cart.cellphones.com.vn/cart/_nuxt/img/cart-pending.a7dba4c.svg" width="100" />
        <div class="w-100 content">
            <h5>
                ĐƠN HÀNG ĐANG XỬ LÝ
            </h5>
            <p>
                MewMobile sẽ gửi thông tin cập nhật đơn hàng tới bạn.
            </p>
            <p class="m-0" style="font-size : 14px">
                Cảm ơn bạn đã đặt hàng ở hệ thống của chúng tôi!
            </p>
        </div>
    </div>
</div>

<div class="container d-flex align-items-center justify-content-center flex-column">
    <div class="order-info col-lg-6 mt-4">
        <span class="fw-bold text-color mb-2 d-block">THÔNG TIN ĐƠN HÀNG</span>
        <div class="info-row">
            <span>Mã đơn hàng</span>
            <span class="value">@ViewBag.BankTransactionNumber</span>
        </div>
        <div class="info-row">
            <span>Số lượng sản phẩm</span>
            <span class="value">01</span>
        </div>
        <div class="info-row">
            <span>Tổng tiền <span class="note">(đã bao gồm VAT)</span></span>
            <span class="value">@ViewBag.Amount</span>
        </div>
        <div class="info-row">
            <span>Phương thức thanh toán</span>
            <span class="value">@ViewBag.Bank</span>
        </div>
        <div class="info-row">
            <span>Cần thanh toán</span>
            <span class="value total">@ViewBag.Amount</span>
        </div>
    </div>
    <div class="order-info col-lg-6 mt-4">
        <span class="fw-bold text-color mb-2 d-block">Thông tin nhận hàng</span>
        <div class="info-row">
            <span>Khách hàng</span>
            <span class="value">@ViewBag.BankTransactionNumber</span>
        </div>
        <div class="info-row">
            <span>Số điện thoại</span>
            <span class="value">01</span>
        </div>
        <div class="info-row">
            <span>Email</span>
            <span class="value">@ViewBag.Bank</span>
        </div>
        <div class="info-row">
            <span>Nhận hàng tại</span>
            <span class="value total">@ViewBag.Amount</span>
        </div>
    </div>
</div>
<div class="container my-5 d-flex align-items-center justify-content-center flex-column">
    <div class="button-container">
        <a href="/" class="button w-100 d-block text-decoration-none text-center">Tiếp tục mua hàng</a>
        <a href="/lichsudonhang" class="button button-red w-100 d-block text-decoration-none text-center">Kiểm tra đơn hàng</a>
    </div>
</div>

