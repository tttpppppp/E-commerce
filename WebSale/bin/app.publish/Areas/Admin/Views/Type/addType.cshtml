@model WebSale.Models.Type

@{
    ViewBag.Title = "Thêm loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}
@using (Html.BeginForm("addType", "Type" , FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal p-2">
    <h4>Thêm loại</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2">Tên loại</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.typeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.typeName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Trạng thái</label>
            <select id="status" name="status" class="form-control">
                <option value="1">Active</option>
                <option value="0">None-Active</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm loại" class="btn btn-primary" />
            <a href="/Admin/Type/Index" class="btn btn-success">Danh sách loại</a>
        </div>
    </div>
</div>
}